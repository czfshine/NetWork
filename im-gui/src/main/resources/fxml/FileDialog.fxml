<StackPane prefHeight="260.0" prefWidth="502.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane prefHeight="260.0" prefWidth="502.0">
         <children>
            <Label layoutX="201.0" layoutY="20.0" text="发送文件">
               <font>
                  <Font name="Microsoft YaHei Bold" size="25.0" />
               </font></Label>
            <Label layoutX="40.0" layoutY="74.0" text="文件路径：" />
            <JFXTextField fx:id="pathText" layoutX="132.0" layoutY="69.0" promptText="请选择文件" />
            <JFXButton fx:id="selectBtn" buttonType="RAISED" layoutX="351.0" layoutY="69.0" mnemonicParsing="false" onAction="#onSelect" ripplerFill="#2790e1" style="-fx-background-color: #4157c5;" text="选择文件" textFill="WHITE" />
            <Label layoutX="40.0" layoutY="143.0" text="发送进度：" />
            <JFXProgressBar fx:id="bar" layoutX="132.0" layoutY="147.0" prefHeight="12.0" prefWidth="200.0" progress="0.0" />
            <Label fx:id="infoLabel" layoutX="366.0" layoutY="143.0" text="未发送" />
            <JFXButton fx:id="okBtn" buttonType="RAISED" layoutX="81.0" layoutY="195.0" mnemonicParsing="false" onAction="#onOk" ripplerFill="#4258c6" style="-fx-background-color: #4157c5;" text="开始发送" textFill="WHITE" />
            <JFXButton fx:id="cleanBtn" buttonType="RAISED" layoutX="298.0" layoutY="195.0" mnemonicParsing="false" onAction="#onClean" ripplerFill="#4157c5" style="-fx-background-color: #4157c5;" text="取消" textFill="WHITE" />
         </children></AnchorPane>
   </children>
</StackPane>
